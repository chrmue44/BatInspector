<UserControl x:Class="BatInspector.Controls.CtlColorMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatInspector.Controls"
             xmlns:res="clr-namespace:BatInspector.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="900">
    <Grid>
    <GroupBox Name ="_grp" Margin="5,5,5,5">
      <StackPanel Margin="0,0,0,0">
      <StackPanel Orientation="Horizontal" Margin="10">
          <local:ctlDataItem  x:Name="_ctlCol1" Margin="0,0,20,0"/>
        <local:ctlDataItem  x:Name="_ctlCol2" Margin="0,0,20,0"/>
          <local:ctlDataItem  x:Name="_ctlCol3" Margin="0,0,20,0"/>
          <local:ctlDataItem  x:Name="_ctlCol4" Margin="0,0,20,0"/>
          <local:ctlDataItem  x:Name="_ctlCol5" Margin="0,0,20,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
          <local:ctlDataItem  x:Name="_ctlVal1" Margin="0,0,20,0"/>
          <local:ctlDataItem  x:Name="_ctlVal2" Margin="0,0,20,0"/>
          <local:ctlDataItem  x:Name="_ctlVal3" Margin="0,0,20,0"/>
          <local:ctlDataItem  x:Name="_ctlVal4" Margin="0,0,20,0"/>
          <local:ctlDataItem  x:Name="_ctlVal5" Margin="0,0,20,0"/>
        </StackPanel>
      </StackPanel>
    </GroupBox>
  </Grid>
</UserControl>
