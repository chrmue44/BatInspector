<UserControl x:Class="BatInspector.Controls.CtlLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatInspector.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="20"></RowDefinition>
        <RowDefinition Height="*"></RowDefinition>
      </Grid.RowDefinitions>
      <StackPanel Grid.Row="0"  Orientation="Horizontal">
        <CheckBox  Name="_cbErr" Content="Error" Margin="5,0,0,0"></CheckBox>
        <CheckBox  Name="_cbWarn"  Content="Warning" Margin="5,0,0,0"></CheckBox>
        <CheckBox  Name="_cbInfo"  Content="Info" Margin="5,0,0,0"></CheckBox>
        <CheckBox  Name="_cbDebug"  Content="Debug" Margin="5,0,0,0"></CheckBox>
      </StackPanel>
    <ScrollViewer   Name="_scrViewer" VerticalScrollBarVisibility="Auto" Grid.Row="1">
      <StackPanel Name="_spEntries"  Margin="5">

      </StackPanel>
    </ScrollViewer>
  </Grid>
</UserControl>
