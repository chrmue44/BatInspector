<UserControl x:Class="BatInspector.Controls.CtlSelectFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatInspector.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="_grd" Height="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="30"/>
    </Grid.ColumnDefinitions>
        <TextBlock Name ="_lbl" Grid.Column="0"  >Select Folder</TextBlock>
        <TextBox Name ="_txt" Grid.Column="1" TextChanged="_txt_TextChanged" >Tb</TextBox>
        <Button Name="_btnOpen" Grid.Column="2" Click="_btnOpen_Click" >...</Button>
    <CheckBox Name="_cBisFolder" Grid.Column="3" Click="_isFolder_Click" VerticalAlignment="Center" Margin="5,0,0,0"/>
  </Grid>
</UserControl>
