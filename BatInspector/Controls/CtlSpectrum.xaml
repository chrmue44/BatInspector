<UserControl x:Class="BatInspector.Controls.CtlSpectrum"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatInspector.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300" SizeChanged="UserControl_SizeChanged">
   <Grid>
        <Canvas Name ="_cvSpec" Grid.Row="0" ToolTipService.InitialShowDelay="5" 
ToolTipService.ShowDuration="8000" 
ToolTipService.BetweenShowDelay="5" MouseMove="_cvSpec_MouseMove"
ToolTip="This is a tool tip." />
    <Line Name="_cursor1"  Visibility="Hidden" Stroke="Red" StrokeThickness="2" />
    <Line Name="_cursor2"  Visibility="Hidden" Stroke="Magenta" StrokeThickness="2" />
  </Grid>
</UserControl>
