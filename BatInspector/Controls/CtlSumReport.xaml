<UserControl x:Class="BatInspector.Controls.CtlSumReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatInspector.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <local:CtlSelectFile x:Name="_ctlFolder"></local:CtlSelectFile>
            <local:ctlSelectItem x:Name="_ctlPeriod"></local:ctlSelectItem>
            <local:ctlSelectItem x:Name="_ctlFilter"></local:ctlSelectItem>
            <Button Content="go" Width="100" HorizontalAlignment="Center"></Button>
        </StackPanel>
    </Grid>
</UserControl>
