<UserControl x:Class="BatInspector.Controls.ctlDataItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatInspector.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <TextBlock Name="_lbl" Grid.Column="0" TextAlignment="Right" Margin="0,0,5,0"  Width="80" Background="{DynamicResource colorBackGround}" Foreground="{DynamicResource colorForeGroundLabel}" >lbl1</TextBlock>
        <TextBox Name= "_tb" Grid.Column="1" VerticalAlignment="Top" VerticalContentAlignment="Center" BorderThickness="1"  Height="20" Background="{DynamicResource colorBackGroundTextB}" Foreground="{DynamicResource colorForeGroundLabel}" TextChanged="_tb_TextChanged" LostFocus="_tb_LostFocus"></TextBox>
    </DockPanel>
</UserControl>
