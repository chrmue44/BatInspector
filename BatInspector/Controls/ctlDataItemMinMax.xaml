<UserControl x:Class="BatInspector.Controls.ctlDataItemMinMax"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatInspector.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <StackPanel Orientation="Horizontal" Margin="5,5,0,0">
    <Label Name="_lbl" HorizontalAlignment="Right" VerticalAlignment="Top" Width = "80">.</Label>
    <Label Name="_lblmin" HorizontalAlignment="Right" VerticalAlignment="Top" Width = "40">min.:</Label>
    <TextBox Name= "_tbMin" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="1" Width = "80" Height ="22" TextChanged="_tb_TextChangedMin">-</TextBox>
    <Label Name="_lblmax" HorizontalAlignment="Right" VerticalAlignment="Top" Width = "40">max.:</Label>
    <TextBox Name= "_tbMax" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="1" Width = "80" Height ="22" TextChanged="_tb_TextChangedMax">-</TextBox>
  </StackPanel>
</UserControl>
