<UserControl x:Class="BatInspector.Controls.ctlPrjInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatInspector.Controls"
             xmlns:res="clr-namespace:BatInspector.Properties" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
    <Label Background="#FF5D6B99" Foreground="White" Content="{x:Static res:MyResources.ctlProjectInfo}"></Label>
        <GroupBox Template="{DynamicResource GroupBoxCmu}" Header="{x:Static res:MyResources.ctlPrjInfoCreated}" Height="45">
      <TextBlock Name="_tbCreated" TextWrapping="Wrap"></TextBlock>
    </GroupBox>
        <GroupBox Template="{DynamicResource GroupBoxCmu}" Header="{x:Static res:MyResources.ctlPrjInfoNotes}" Height="80">
            <TextBox Name="_tbNotes" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
    </GroupBox>
  </StackPanel>
</UserControl>
