<Window x:Class="BatInspector.Forms.FrmColorMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatInspector.Forms"
        mc:Ignorable="d"
        Title="Configure Color MAp" Height="550" Width="900">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="100"/>
      <RowDefinition Height="100"/>
      <RowDefinition Height="100"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>
    <GroupBox Grid.Row="0" Header="Color Gradient" Margin="5">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="60"/>
          <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Canvas Name="_cvImg" Grid.Row="0" />
        <Canvas Name="_cvRuler" Height="30" Grid.Row="1" />
      </Grid>
    </GroupBox>
    <local:CtlColorMap x:Name="_ctlR" Grid.Row="1"/>
    <local:CtlColorMap x:Name="_ctlG" Grid.Row="2"/>
    <local:CtlColorMap x:Name="_ctlB" Grid.Row="3"/>
    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Name="_btnApply" Width="100" HorizontalAlignment="Right" Margin="10" Click="_btnApply_Click">Apply</Button>
      <Button Name="_btnCancel" Width="100" HorizontalAlignment="Right" Margin="10" Click="_btnCancel_Click" >Cancel</Button>
      <Button Name="_btnOk" Width="100"  HorizontalAlignment="Right" Margin="10" Click="_btnOk_Click">OK</Button>
    </StackPanel>
  </Grid>
</Window>
