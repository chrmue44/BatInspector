<Window x:Class="BatInspector.Forms.FrmCreateXmlInfos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatInspector.Controls"
        xmlns:res="clr-namespace:BatInspector.Properties"
        mc:Ignorable="d"
        Title="{x:Static res:MyResources.frmCreateXmlTitle}" Height="250" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="{x:Static res:MyResources.frmCreateXmlInfo}"></Label>
            <local:ctlDataItem x:Name="_ctlLat" Margin=" 0,20,0,0"/>
            <local:ctlDataItem x:Name="_ctlLon"/>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Name="_btnOk" Height="20" Width="100" Content="{x:Static res:MyResources.BtnOK}" Margin ="0,0,10,0" Click="_btnOk_Click"/>
                <Button Name="_btnCancel"  Height="20" Width="100" Content="{x:Static res:MyResources.BtnCancel}" Click="_btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
