<Window x:Class="BatInspector.FrmLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatInspector"
        mc:Ignorable="d"
        Title="Log" Height="450" Width="800"
        Icon="../images/bug-48.png">

    <ScrollViewer   VerticalScrollBarVisibility="Auto" >
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"  Orientation="Horizontal">
                <CheckBox  Name="_cbErr" Content="Error" Margin="5,0,0,0"></CheckBox>
                <CheckBox  Name="_cbWarn"  Content="Warning" Margin="5,0,0,0"></CheckBox>
                <CheckBox  Name="_cbInfo"  Content="Info" Margin="5,0,0,0"></CheckBox>
                <CheckBox  Name="_cbDebug"  Content="Debug" Margin="5,0,0,0"></CheckBox>
            </StackPanel>
            <StackPanel Name="_spEntries" Grid.Row="1" Margin="5">

            </StackPanel>
    </Grid>
    </ScrollViewer>
</Window>
