<Window x:Class="BatInspector.Forms.FrmMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatInspector.Forms"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Icon="../images/kopf64.png"
        Title="FrmMessage" Height="170" Width="500" Loaded="Window_Loaded" Background="{DynamicResource colorBackGround}">
    <GroupBox BorderThickness="2" Margin="10,0,10,10" Background="{DynamicResource colorBackGround}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="128" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="../images/tea-cup.png" Margin="10"/>
        <TextBox Grid.Column="1" x:Name="_tbMsg"  Margin="10" Padding="10" FontWeight="Bold" BorderThickness="0" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="{DynamicResource colorForeGroundLabel}"/>
    </Grid>
    </GroupBox>
</Window>
