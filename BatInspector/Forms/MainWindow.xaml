<Window x:Class="BatInspector.Forms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatInspector" xmlns:forms="clr-namespace:BatInspector.Forms"
        mc:Ignorable="d"
        Title="BatInspector" Height="900" Width="1400"
        Icon="../images/Bat_icon-icons.com_75012.png"  KeyUp="Window_KeyUp" KeyDown="Window_KeyDown" Closing="Window_Closing"
        >
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Name="_lblProject" Text="---"></TextBlock>
            <TextBlock Name="_lblStatus" HorizontalAlignment="Right"></TextBlock>
        </StatusBar>
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ToolBarTray Grid.Row="0"  Height="44" VerticalAlignment="Top">
          <ToolBar x:Name="toolBar1" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" >
            <Button x:Name="_btnSave"  Height="39" VerticalAlignment="Top" HorizontalAlignment="Left" ToolTip="save settings" Click="_btnSave_Click">
              <Image Source="../images/icons8-save-48.png"></Image>
            </Button>
          <Button x:Name="_btnDel"  Height="39" VerticalAlignment="Top" HorizontalAlignment="Left" ToolTip="edit color scheme for waterfall diagram" Click="_btnDel_Click">
              <Image Source="../images/color-palette.png"> </Image>
            </Button>
            <Button x:Name="_btnFindCalls" Click="_btnFindCalls_Click"  ToolTip="find bat calls in project" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left">
              <Image Source="../images/magnifying-glass.png"></Image>
            </Button>
            <Button x:Name="_btnDebug" Click="_btnDebug_Click"  ToolTip="enable debug log" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left">
              <Image Source="../images/bug-48.png"></Image>
            </Button>
            <Button x:Name="_btnFilter" Click="_btnFilter_Click"  ToolTip="define filters for lists" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left">
              <Image Source="../images/filter.png"></Image>
            </Button>
          <Button x:Name="_btnSpecies" Click="_btnSpecies_Click"  ToolTip="edit species information" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Image Source="../images/Bat_icon-icons.com_75012.png"></Image>
          </Button>
          <Button x:Name="_btnSettings" Click="_btnSettings_Click"  ToolTip="show application settings" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Image Source="../images/settingscog_87317.png"></Image>
          </Button>
          <Button x:Name="_btnHelp" Click="_btnHelp_Click"  ToolTip="open manual" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left">
              <Image Source="../images/Button_Help_icon_32.png"></Image>
            </Button>
            <Button x:Name="_btnInfo" Click="_btnInfo_Click"  ToolTip="show software info" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left">
              <Image Source="../images/Actions_help_about_icon.png"></Image>
            </Button>
        </ToolBar>
        </ToolBarTray>
        <TabControl Grid.Row="1" x:Name="_tbReport" Margin="5" GotFocus="_tbReport_GotFocus">
            <TabItem Header="Project View" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="6*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row ="0" Grid.Column="2" Orientation="Horizontal">
                        <Button x:Name="_btnAll"  Click ="_btnAll_Click" Content="All" HorizontalAlignment="Left"></Button>
                        <Button x:Name="_btnNone" Click="_btnNone_Click" Content="None" HorizontalAlignment="Left" Margin="5,0,0,0"></Button>
                        <Separator></Separator>
                        <Button x:Name="_btnHideUnSelected" Click="_btnHideUnSelected_Click" Content="Hide unselected" HorizontalAlignment="Left" Margin="5,0,0,0"></Button>
                        <Button x:Name="_btnShowAll" Click="_btnShowAll_Click" Content="Show all" HorizontalAlignment="Left" Margin="5,0,0,0"></Button>
                        <Button x:Name="_btnDelSelected" Click ="_btnDelSelected_Click" Content="Del selected" HorizontalAlignment="Left" Margin="5,0,0,0"></Button>
                        <Separator></Separator>
                        <Button x:Name="_btnSize" Click ="_btnSize_Click"  Content="Size" HorizontalAlignment="Left" Margin="5,0,0,0"></Button>
                        <Separator></Separator>
                        <TextBlock Margin="5,0,0,0">Filter:</TextBlock>
                        <ComboBox Name="_cbFilter" Margin="5,0,0,0"></ComboBox>
                        <Button x:Name="_btnApplyFilter" Click ="_btnApplyFilter_Click"  Content="Apply Filter" HorizontalAlignment="Left" Margin="5,0,0,0"></Button>
                        <Separator></Separator>
                        <Button x:Name="_btnCallInfo" Click ="_btnCallInfo_Click"  Content="Hide/Show Info" HorizontalAlignment="Left" Margin="5,0,0,0"></Button>
            </StackPanel>
                    <TreeView Name="trvStructure" BorderThickness="0" Grid.Row="1" Grid.Column="0" TreeViewItem.Expanded="TreeViewItem_Expanded" TreeViewItem.Selected="TreeViewItem_Selected" Margin="5">
                    </TreeView>
                    <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
                    <ScrollViewer Grid.Row="1" Grid.Column="2" VerticalScrollBarVisibility="Auto" >
                         <StackPanel  Name="_spSpectrums" Orientation="Vertical" >
                    </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Report" Margin="0">
                <Grid Background="#FFE5E5E5" >
                    <DataGrid x:Name="_dgData" Margin="0,0,0,10" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
    </DockPanel>
</Window>
