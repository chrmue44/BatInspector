<Window x:Class="BatInspector.Forms.frmActivity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatInspector.Controls"
        xmlns:res="clr-namespace:BatInspector.Properties"
        mc:Ignorable="d"
        Title="{x:Static res:MyResources.ActivityDiagram}" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <local:ctlActivityDiagram x:Name="_ctlActivity" Grid.Row="0" Margin="0,10,0,10"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
          <Button Name="_btnCreate" Height="25" Width="120" Content="Create Diagram" Margin="0,0,10,0" Click="_btnCreate_Click" IsEnabled="False"/>
          <Button Name="_btnOk" Height="25" Width="120" Content="{x:Static res:MyResources.BtnOK}"  Margin="0,0,0,0" Click="_btnOK_Click"/>
        </StackPanel>
    </Grid>
</Window>
