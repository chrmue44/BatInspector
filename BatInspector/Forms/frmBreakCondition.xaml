<Window x:Class="BatInspector.Forms.frmBreakCondition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatInspector.Controls"
        xmlns:res="clr-namespace:BatInspector.Properties"

        mc:Ignorable="d"
        Title="Enter Break Condition" Height="140" Width="400">
    <Grid Margin="0,0,10,-6">
        <StackPanel>
            <local:ctlDataItem x:Name="_ctlLineNr"/>
            <local:ctlDataItem x:Name="_ctlCondition"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
              <Button x:Name="_btnOk" Width="100" Content="{x:Static res:MyResources.BtnOK}" Height="25" Margin="10,20,0,0" Click="_btnOk_Click"/>
                <Button x:Name="_btnCancel" Width="100" Content="{x:Static res:MyResources.BtnCancel}" Height="25" Margin="10,20,0,0" Click="_btnCancel_Click" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
