<Window x:Class="BatInspector.Forms.frmCreatePrjFromQuery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatInspector.Controls"
        xmlns:res="clr-namespace:BatInspector.Properties"
        mc:Ignorable="d"
        Title="{x:Static res:MyResources.frmCreatePrjFromQuery_Title}" Height="250" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <local:ctlDataItem x:Name="_ctlPrjName"/>
            <local:ctlDataItem x:Name="_ctlPrjNotes"/>
            <local:CtlSelectFile x:Name="_ctlTargetDir"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="_btnOk" Content="{x:Static res:MyResources.BtnOK}" Width="120" Margin="0,0,10,0" Click="_btnOk_Click"/>
            <Button x:Name="_btnCancel" Content="{x:Static res:MyResources.BtnCancel}" Width="120" Click="_btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
