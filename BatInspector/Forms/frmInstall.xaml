<Window x:Class="BatInspector.Forms.frmInstall"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatInspector.Forms"
        xmlns:properties="clr-namespace:BatInspector.Properties"
        mc:Ignorable="d"
        Title="Install Features for BatInspector" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <CheckBox Name ="_cbData" Content="" Margin="10"></CheckBox>
            <CheckBox Name ="_cbPython" Content="" Margin="10"></CheckBox>
            <CheckBox Name ="_cbModel" Content="" Margin="10"></CheckBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="_btnCancel" Content="{x:Static properties:MyResources.BtnCancel}" Width="100"  Click="_btnCance_Click" Margin="20,50"/>
                <Button x:Name="_btnOk" Content="{x:Static properties:MyResources.BtnOK}" Width="100"  Click="_btnOk_Click" Margin="20,50"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
