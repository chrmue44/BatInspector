<UserControl x:Class="BatInspector.ctlWavFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatInspector"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Margin="0">
    <GroupBox Name="_grp" Margin="3" BorderThickness="1" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Header="Bla">
    <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
            <CheckBox Grid.Column="0" Name="_cbSel" Content="" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
            <ListView Grid.Column="1" Name="_lvFileInfo"  HorizontalAlignment="Left"  VerticalAlignment="Top"/>
            <Image Grid.Column="2" Name ="Img"  HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        </Grid>
    </GroupBox>
</UserControl>
