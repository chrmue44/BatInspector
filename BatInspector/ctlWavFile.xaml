<UserControl x:Class="BatInspector.ctlWavFile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatInspector"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
        <Image Grid.Column="1" Name ="Img"  HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        <ListView Grid.Column="0" Name="FileInfo"  HorizontalAlignment="Left"  VerticalAlignment="Top">
        </ListView>
    </Grid>
</UserControl>
